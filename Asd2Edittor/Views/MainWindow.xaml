<Window x:Class="Asd2Edittor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:bh="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Asd2Edittor.ViewModels"
        xmlns:local="clr-namespace:Asd2Edittor.Views"
        xmlns:beh="clr-namespace:Asd2Edittor.Views.Behaviors"
        xmlns:fsctrl="clr-namespace:fslib3.WPF.Controls;assembly=fslib3.WPF"
        xmlns:fsbeh="clr-namespace:fslib3.WPF.Behaviors;assembly=fslib3.WPF"
        mc:Ignorable="d"
        x:Name="window"
        Background="#202020" Title="Altseed2 UIエディタ" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
    </Window.Resources>
    <bh:Interaction.Behaviors>
        <beh:MainWindowBehavior/>
    </bh:Interaction.Behaviors>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Background="Transparent" Foreground="White" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="新規(_N)" InputGestureText="Ctrl+N"/>
                <MenuItem Header="開く(_O)" InputGestureText="Ctrl+O"/>
                <MenuItem Header="上書き保存(_S)" InputGestureText="Ctrl+S"/>
                <MenuItem Header="名前を付けて保存(_A)" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="終了(_X)" Command="{Binding Path=CloseWindow}"/>
            </MenuItem>
            <MenuItem Header="編集(_E)">

            </MenuItem>
            <MenuItem Header="表示(_V)">

            </MenuItem>
        </Menu>
        <TextBox Grid.Column="0" Grid.Row="1" Text="{Binding Path=Text.Value, UpdateSourceTrigger=Explicit}"/>
        <TreeView Grid.Column="1" Background="Transparent" Grid.Row="1" ItemsSource="{Binding Path=Root.Children}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="vm:FilePathViewModel" ItemsSource="{Binding Path=Children}">
                    <TextBlock Foreground="White" Text="{Binding Path=Name.Value}">
                        <bh:Interaction.Triggers>
                            
                        </bh:Interaction.Triggers>
                    </TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
            <!--<TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Style.Setters>
                        <EventSetter Event="MouseDoubleClick" Handler="TreeViewItem_MouseDoubleClick"/>
                    </Style.Setters>
                </Style>
            </TreeView.ItemContainerStyle>-->
        </TreeView>
    </Grid>
    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+W" Command="{Binding Path=CloseWindow}"/>
        <KeyBinding Gesture="F5" Command="{Binding Path=UpdateText}"/>
    </Window.InputBindings>
</Window>
